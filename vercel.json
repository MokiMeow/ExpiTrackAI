{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/dist/server/index.js"
    },
    {
      "src": "^/assets/(.*)",
      "dest": "/dist/public/assets/$1"
    },
    {
      "src": "^/favicon.ico",
      "dest": "/dist/public/favicon.ico"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/index.html"
    }
  ],
  "outputDirectory": "dist"
}
